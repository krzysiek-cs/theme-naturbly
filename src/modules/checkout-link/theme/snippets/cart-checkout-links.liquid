{% for item in cart.items %}
  {% if item.selling_plan_allocation != null %}
    {% assign has_selling_plan = true %}
  {% endif %}
{% endfor %}
{% assign has_prepaid = false %}
{% render 'has-prepaid-plan' with has_prepaid %}

{% if has_selling_plan and has_prepaid == false %}
  {% render 'juo-checkout-link', classes: 'block btn-checkout' %}
{% endif %}

{% if has_selling_plan and has_prepaid == false %}
  {% render 'default-checkout-link' %}
{% else %}
  <!-- Paste here default checkout button from live theme -->
  <button
                      type="submit"
                      class="cart__checkout-button button button--primary focus-inset"
                      name="checkout"
                      {% if cart == empty %}
                        disabled
                      {% endif %}
                      form="cart"
                    >
                      {{ 'sections.cart.proceed_checkout' | t }}
                    </button>
{% endif %}
